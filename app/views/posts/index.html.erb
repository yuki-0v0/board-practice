<div class="index h-100">
    <% if @posts %>
        <% @posts.each do |post| %>
            <div class="media">
                <%# <img class="d-flex mr-3 user-image" src="/dummy_image.png" data-src="holder.js/64x64?theme=sky" alt="Generic placeholder image"> %>
                <div class="media-body">
                    <%# <h5 class="mt-0">投稿したユーザ名</h5> %>
                    <%= post.content %>
                    <div class="menu">
                        <ul>
                            <li class="mr-2"><%= link_to('編集',"/posts/#{post.id}/edit", {method: 'post'})%></li>
                            <li><%= link_to('削除',"/posts/#{post.id}/destroy", {method: 'post'})%></li>
                        </ul>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
